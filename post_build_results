#!/bin/bash

build_result_val=1

if [[ "$TRAVIS_TEST_RESULT" == "0" ]]; then
  build_result_val="passing"
else
  build_result_val="failing"
fi

echo "Will post result: {\"project\":\"enroll-ui_dc\",\"branch\":\"${TRAVIS_BRANCH}\",\"sha\":\"${TRAVIS_COMMIT}\",\"status\":\"${build_result_val}\"}"

curl -H "Content-Type: application/json" -H "X-API-Key: ${BUILD_REPORT_API_KEY}" -X POST ${BUILD_REPORT_URL} -d "{\"project\":\"enroll-ui_dc\",\"branch\":\"${TRAVIS_BRANCH}\",\"sha\":\"${TRAVIS_COMMIT}\",\"status\":\"${build_result_val}\"}"
